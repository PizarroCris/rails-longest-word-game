<h1 class="ms-4 mt-3">New game</h1>

<div class="letters ms-3 d-flex gap-2">
  <% @letters.each do |letter| %>
    <p class="fw-bold fs-4"><%= letter.upcase %></p>
  <% end %>
</div>

<div class="ms-4 mt-3">
  <p>What is the longest word you can find?</p>
  <form action="<%= score_path %>" method="post" data-turbo="false" class="input-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join(" ") %>

    <input type="text" name="word" class="form-control">
    <input type="submit" value="Play" class="btn btn-light border">
  </form>
</div>
